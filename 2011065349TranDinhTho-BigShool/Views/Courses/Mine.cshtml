@model IEnumerable<_2011065349TranDinhTho_BigShool.Models.Course>
<h2>Mine</h2>
<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                    </span>
                    <span class="category">
                        @course.category.Name
                    </span>
                </div>
                <div class="action">

                    <div class="action">
                        <a href="@Url.Action("Edit","Courses", new { id = course.Id })">Edit</a> |
                       <a href="">Delete</a>
                    </div>
                </div>
                
            </li>
        }

    </ul>
</div>
}